{
  "compilerOptions": {
    "rootDir": ".",
    "paths": {
      "@/": ["./src/"],
      "@@/": ["./"]
    },
    "target": "es2022", // Modern JS features
    "module": "esnext", // Use ES module syntax
    "moduleResolution": "node", // Node-style module resolution
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Output directory for compiled files
    "resolveJsonModule": true, // Allow importing .json files
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true, // Allow .ts extension in imports
    "noEmit": true
  },
  "include": ["src", "*.ts"], // Include src folder and any .ts files in root
  "exclude": ["node_modules", "dist"]
}
